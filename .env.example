# Screenshot Authenticity AI - Environment Configuration
# 手机截图真伪检测系统环境配置

# =============================================================================
# 基本设置
# =============================================================================

# 环境类型 (development/staging/production)
ENVIRONMENT=development

# 调试模式
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# =============================================================================
# 安全设置
# =============================================================================

# JWT密钥 (生产环境请更换为复杂密钥)
SECRET_KEY=your-super-secret-key-change-in-production

# API密钥头部名称
API_KEY_HEADER=X-API-Key

# Token过期时间(分钟)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# 数据库配置
# =============================================================================

# 数据库URL
DATABASE_URL=sqlite:///./authenticity.db

# 数据库连接池设置
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# =============================================================================
# 模型配置
# =============================================================================

# 是否使用GPU
USE_GPU=true

# 模型缓存目录
MODEL_CACHE_DIR=models/cache

# EfficientNet模型变体
EFFICIENTNET_VARIANT=efficientnet_b0

# Vision Transformer模型
VIT_MODEL=vit_base_patch16_224

# 输入图像尺寸
INPUT_SIZE_WIDTH=224
INPUT_SIZE_HEIGHT=224

# 批处理大小
BATCH_SIZE=32

# 置信度阈值
CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# 检测配置
# =============================================================================

# 启用传统检测方法
ENABLE_TRADITIONAL_METHODS=true

# 启用元数据分析
ENABLE_METADATA_ANALYSIS=true

# 启用深度学习
ENABLE_DEEP_LEARNING=true

# 启用集成模型
ENABLE_ENSEMBLE=true

# 检测阶段超时设置(毫秒)
STAGE1_TIMEOUT=50
STAGE2_TIMEOUT=200
STAGE3_TIMEOUT=1000

# JPEG质量阈值
JPEG_QUALITY_THRESHOLD=0.8

# 噪声方差阈值
NOISE_VARIANCE_THRESHOLD=0.1

# 边缘锐度阈值
EDGE_SHARPNESS_THRESHOLD=0.5

# =============================================================================
# API配置
# =============================================================================

# 最大文件大小(字节) - 10MB
MAX_FILE_SIZE=10485760

# 允许的图像格式
ALLOWED_IMAGE_FORMATS=jpeg,jpg,png,webp

# 速率限制
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS设置
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST
CORS_ALLOW_HEADERS=*

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE_PATH=logs/app.log

# 日志文件最大大小(字节) - 10MB
LOG_MAX_FILE_SIZE=10485760

# 日志文件备份数量
LOG_BACKUP_COUNT=5

# 日志格式
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# 监控配置
# =============================================================================

# 启用指标收集
ENABLE_METRICS=true

# 指标服务端口
METRICS_PORT=8001

# 启用健康检查
ENABLE_HEALTH_CHECK=true

# 健康检查间隔(秒)
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# 存储配置
# =============================================================================

# 临时文件目录
TEMP_DIR=temp

# 数据目录
DATA_DIR=data

# 模型目录
MODELS_DIR=models

# 日志目录
LOGS_DIR=logs

# =============================================================================
# 特定应用配置
# =============================================================================

# Android设备配置
ANDROID_STATUS_BAR_HEIGHT=24
ANDROID_NAV_BAR_HEIGHT=48

# iOS设备配置
IOS_STATUS_BAR_HEIGHT=20
IOS_NAV_BAR_HEIGHT=44

# 风险阈值
RISK_THRESHOLD_LOW=0.3
RISK_THRESHOLD_MEDIUM=0.6
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_CRITICAL=0.95

# =============================================================================
# 第三方服务配置
# =============================================================================

# Redis配置(可选)
# REDIS_URL=redis://localhost:6379/0

# 对象存储配置(可选)
# S3_BUCKET=screenshot-authenticity
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_REGION=us-east-1

# 邮件服务配置(可选)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-password

# =============================================================================
# 开发/测试配置
# =============================================================================

# 测试模式
TEST_MODE=false

# 跳过认证(仅开发环境)
SKIP_AUTH=false

# 详细错误信息
VERBOSE_ERRORS=true

# API文档访问
ENABLE_DOCS=true

# =============================================================================
# 性能优化
# =============================================================================

# 工作进程数
WORKERS=1

# 线程池大小
THREAD_POOL_SIZE=4

# 请求超时(秒)
REQUEST_TIMEOUT=30

# 连接超时(秒)
CONNECTION_TIMEOUT=10

# =============================================================================
# 缓存配置
# =============================================================================

# 启用缓存
ENABLE_CACHE=true

# 缓存TTL(秒)
CACHE_TTL=3600

# 缓存最大条目数
CACHE_MAX_ENTRIES=1000